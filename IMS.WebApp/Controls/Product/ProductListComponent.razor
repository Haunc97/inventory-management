@inject IViewProductsByNameUseCase ViewProductsByNameUseCase

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col" class="text-secondary text-uppercase small fw-bold">Name</th>
                <th scope="col" class="text-secondary text-uppercase small fw-bold">Quantity</th>
                <th scope="col" class="text-secondary text-uppercase small fw-bold">Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <ProductListItemComponent Products="@listProducts" />
        </tbody>
    </table>
</div>

@code {

    private List<Product> listProducts = new List<Product>();

    [Parameter]
    public string SearchTerm { get; set; } = string.Empty;

    protected override async Task OnParametersSetAsync()
    {
        this.listProducts = (await ViewProductsByNameUseCase.ExecuteAsync(SearchTerm)).ToList();
    }
}
