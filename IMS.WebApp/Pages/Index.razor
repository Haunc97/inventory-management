@page "/"

<PageTitle>Dashboard - IMS</PageTitle>

<div class="row g-4">
    <!-- Quick Stats -->
    <div class="col-md-3">
        <div class="dashboard-card border-start border-4 border-primary">
            <h6 class="text-secondary text-uppercase small fw-bold">Total Inventory</h6>
            <h3 class="mt-2 mb-0 fw-bold text-dark">1,245</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="dashboard-card border-start border-4 border-success">
            <h6 class="text-secondary text-uppercase small fw-bold">Total Products</h6>
            <h3 class="mt-2 mb-0 fw-bold text-dark">85</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="dashboard-card border-start border-4 border-warning">
            <h6 class="text-secondary text-uppercase small fw-bold">Low Stock</h6>
            <h3 class="mt-2 mb-0 fw-bold text-dark">12</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="dashboard-card border-start border-4 border-info">
             <h6 class="text-secondary text-uppercase small fw-bold">Recent Orders</h6>
             <h3 class="mt-2 mb-0 fw-bold text-dark">24</h3>
        </div>
    </div>

    <!-- Main Content -->
    <div class="col-12">
        <div class="dashboard-card h-100 d-flex flex-column align-items-center justify-content-center py-5 text-center">
             <img src="https://img.freepik.com/free-vector/warehouse-workers-checking-goods-boxes-shelves-using-tablet-scanners-export-center-logistics_74855-14123.jpg" 
                  alt="Inventory Illustration" 
                  class="img-fluid mb-4 opacity-75"
                  style="max-width: 400px; filter: grayscale(100%); mix-blend-mode: multiply;" />
             
             <h4 class="fw-bold mb-2">Welcome to Your Inventory System</h4>
             <p class="text-muted" style="max-width: 500px">
                 Manage your inventories and products efficiently. 
                 Use the sidebar menu to navigate between different modules.
             </p>
        </div>
    </div>
</div>
