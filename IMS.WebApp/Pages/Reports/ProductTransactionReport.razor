@page "/productreport"

@inject ISearchProductTransactionUseCase SearchProductTransactionUseCase
@inject IJSRuntime JSRuntime

<PageTitle>Product Report - IMS</PageTitle>

<div class="row justify-content-center">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold text-dark mb-0">Product Transaction Report</h4>
                <small class="text-muted">View and filter product history.</small>
            </div>
            <button type="button" class="btn btn-outline-secondary d-print-none" @onclick="PrintReport">
                <span class="oi oi-print me-2"></span> Print Report
            </button>
        </div>

        <div class="dashboard-card d-print-none mb-4">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="prodName" class="form-label text-muted small text-uppercase fw-bold">Product Name</label>
                    <input type="text" id="prodName" class="form-control" @bind-value="prodName" placeholder="Search..." />
                </div>
                <div class="col-md-3">
                    <label for="dfrom" class="form-label text-muted small text-uppercase fw-bold">Date From</label>
                    <input type="date" id="dfrom" class="form-control" @bind-value="dateFrom" />
                </div>
                <div class="col-md-3">
                    <label for="dto" class="form-label text-muted small text-uppercase fw-bold">Date To</label>
                    <input type="date" id="dto" class="form-control" @bind-value="dateTo" />
                </div>
                <div class="col-md-3">
                    <label for="act" class="form-label text-muted small text-uppercase fw-bold">Activity Type</label>
                    <select id="act" class="form-select" @bind="activityTypeId">
                        <option value="0">All Activities</option>
                        <option value="1">Produce Product</option>
                        <option value="2">Sell Product</option>
                    </select>
                </div>
                <div class="col-md-2 mt-3">
                     <button type="button" class="btn btn-primary w-100" @onclick="SearchProductTrans">Search</button>
                </div>
            </div>
        </div>

        <div id="printarea">
            @if (productTransactions != null)
            {
                <div class="dashboard-card p-0 overflow-hidden">
                    <div class="table-responsive">
                         <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-secondary text-uppercase small fw-bold">Date</th>
                                    <th class="text-secondary text-uppercase small fw-bold">Product</th>
                                    <th class="text-secondary text-uppercase small fw-bold">Activity</th>
                                    <th class="text-secondary text-uppercase small fw-bold">Qty Before</th>
                                    <th class="text-secondary text-uppercase small fw-bold">Qty After</th>
                                    <th class="text-secondary text-uppercase small fw-bold">Unit Price</th>
                                    <th class="text-secondary text-uppercase small fw-bold">Reference#</th>
                                    <th class="text-secondary text-uppercase small fw-bold">User</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pt in productTransactions)
                                {
                                    <tr>
                                        <td>@pt.TransationDate.ToString("MM/dd/yyyy")</td>
                                        <td class="fw-medium">@pt.Product.ProductName</td>
                                        <td>
                                            @if (pt.ActivityType == ProductTransationType.ProduceProduct)
                                            {
                                                <span class="badge bg-success bg-opacity-10 text-success">Produce</span>
                                            }
                                            else if (pt.ActivityType == ProductTransationType.SellProduct)
                                            {
                                                <span class="badge bg-info bg-opacity-10 text-info">Sell</span>
                                            }
                                        </td>
                                        <td>@pt.QuantityBefore</td>
                                        <td>@pt.QuantityAfter</td>
                                        <td>@pt.UnitPrice?.ToString("c")</td>
                                        <td class="small text-muted">
                                            @if(!string.IsNullOrEmpty(pt.SONumber)) { <div>SO: @pt.SONumber</div> }
                                            @if(!string.IsNullOrEmpty(pt.ProductionNumber)) { <div>Prod: @pt.ProductionNumber</div> }
                                        </td>
                                        <td>@pt.DoneBy</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string prodName = string.Empty;
    private DateTime? dateFrom;
    private DateTime? dateTo;
    private int activityTypeId = 0;
    private IEnumerable<ProductTransation>? productTransactions;

    private async Task SearchProductTrans()
    {
        ProductTransationType? invType = null;
        if (activityTypeId != 0) invType = (ProductTransationType)activityTypeId;

        productTransactions = await SearchProductTransactionUseCase.ExecuteAsync(
            prodName,
            dateFrom,
            dateTo,
            invType
        );
    }

    private void PrintReport()
    {
        JSRuntime.InvokeVoidAsync("print");
    }
}
